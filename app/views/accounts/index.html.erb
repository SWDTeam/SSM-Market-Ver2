<!--use css of index categories-->
<div class="wrap-index-category">
  <div class="title-index-category mb-4">
    View All Users
  </div>

  <!--FILTER form-->
  <form class="mb-4">
    <div class="row">
      <div class="col-lg-1"></div>

      <div class="col-lg-3">
        <select class="input-filter-index-category">
          <option>Role</option>
        </select>
      </div>

      <div class="col-lg-2"></div>

      <div class="col-lg-3 justify-content-end text-right">
        <input type="text" placeholder="Name..." class="input-filter-index-category">
      </div>

      <div class="col-lg-2">
        <input type="submit" class="bnt-index-category">
      </div>
    </div>
  </form>

  <!--LABEL-->
  <div class="row pb-2 wrap-label-index-category">
    <!--NO-->
    <div class="col-1 px-0 text-center label-index-category">
      No.
    </div>

    <!--NAME-->
    <div class="col-2 col-2-5 pl-0 pr-2 label-index-category">
      Name
    </div>

    <!--EMAIL-->
    <div class="col-3 pl-2 pr-0 label-index-category">
      Email
    </div>

    <!--ROLE-->
    <div class="col-1 px-2 label-index-category">
      Role
    </div>

    <!--STATUS-->
    <div class="col-1 px-2 label-index-category text-center">
      Status
    </div>

    <!--SHOW-->
    <div class="col-1 px-1 text-center label-index-category">
      Show
    </div>

    <!--ACTION-->
    <div class="col-3 col-2-5 px-3 label-index-category">
      Action
    </div>
  </div>

  <%# @accounts.each do |account| %>
    <div class="row py-3 wrap-content-index-product">
      <!--NO-->
      <div class="col-1 px-0 text-center">
        1
      </div>

      <!--NAME-->
      <div class="col-2 col-2-5 pl-0 pr-2">
        yfyugyugu
      </div>

      <!--EMAIL-->
      <div class="col-3 pl-2 pr-0">
        Email@email
      </div>

      <!--ROLE-->
      <div class="col-1 px-2">
        Admin
      </div>

      <!--STATUS-->
      <div class="col-1 px-2 text-center">
        active
      </div>

      <!--SHOW-->
      <div class="col-1 px-2">
        <center>
          <i class="fa fa-search-plus show-bnt-index-account align-items-center"></i>
        </center>
      </div>

      <!--ACTION-->
      <div class="col-3 col-2-5 px-3">
        <div class="row">
          <div class="col-6 px-2">
            <center>
              <i class="fa fa-lock ban-bnt-index-account align-items-center">
                <span class="px-1 align-items-center" style="font-size: 13px;">Ban</span>
              </i>
            </center>
          </div>

          <div class="col-6 pr-2 pl-0">
            <center>
              <i class="fa fa-lock active-bnt-index-account align-items-center">
                <span class="px-1 align-items-center" style="font-size: 13px;">Active</span>
              </i>
            </center>
          </div>
        </div>
      </div>
    </div>
  <%# end %>
</div>