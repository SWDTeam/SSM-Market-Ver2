      </div>

      <!--input NAME-->
      <div class="row">
        <div class="col-lg-12">
          <%= form.text_field :name, id: :account_name, class:'input-filter-index-category' %>
          <!-- <input type="text" class="input-filter-index-category"> -->
        </div>
      </div>
    </div>
  </div>

