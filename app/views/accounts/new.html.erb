<!--css in index-account-->
<%= form_with(model: @account, local: true, url: {action: 'create', controller: 'accounts'}, html: {id:"form--add--admin"}) do |form| %>
<div class="wrap-index-category" style="padding: 30px 50px;">
  <div class="title-index-category mb-4">Add admin</div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-6">
      <!--label EMAIL-->
      <div class="row">
        <div class="col-12 label-account">Email</div>
      </div>

      <!--input EMAIL-->
      <div class="row">
        <div class="col-12">
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'input-filter-index-category', id: 'email-add-admin' %>
          <p class="validate-new-product" id="error--email--add-admin"></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-6">
      <!--label NAME-->
      <div class="row">
        <div class="col-12 label-account">Name</div>
      </div>

      <!--input NAME-->
      <div class="row">
        <div class="col-12">
          <%= form.text_field :name, id: :account_name, class:'input-filter-index-category' %>
          <p class="validate-new-product" id="error--name--add-admin"></p>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-6">
      <!--label ROLE-->
      <div class="row">
        <div class="col-12 label-account">Role</div>
      </div>
      <!--input ROLE-->
      <div class="row">
        <div class="col-12">
          <%= form.text_field :role, id: :account_role, class:'input-filter-index-category', disabled:true, value:'Admin' %>         
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-2 mt-4">
    <div class="col-lg-12 text-center">
    <%= form.submit 'Add New Admin', class: 'bnt-new-admin col-lg-3', html:{style:"width: 20%; padding: 8px 0;"} %>
    </div>
  </div>
</div>

<% end %>
