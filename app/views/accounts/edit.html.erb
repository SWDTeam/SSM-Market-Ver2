<%= notice %>
<%= form_with model: @user, local: true, url:{action: "update"}, method: :put do |form| %>
<div class="wrap-index-category">
  <div class="title-index-category mb-4">Profile of <%= @user.name %></div>

  <div class="row" style="padding: 0 70px;">
    <div class="col-12">
      <!--EMAIL-->
      <div class="row"><div class="col-12 mr-5">Email</div></div>
      <div class="row">
        <div class="col-12 mr-5">
        <%= form.text_field :email, class:"input-filter-index-category", value: @user.email %>
        </div>
      </div>

      <!--NAME-->
      <div class="row">
        <div class="col-12 mr-5">Name</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <%= form.text_field :name, class:"input-filter-index-category", value: @user.name %>
        </div>
      </div>

      <!--PHONE-->
      <div class="row">
        <div class="col-12 mr-5">Phone</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <%= form.text_field :phone, class:"input-filter-index-category", value: @user.phone %>
        </div>
      </div>

      <!--ROLE-->
      <div class="row"><div class="col-12 mr-5">Role</div></div>
      <div class="row">
        <div class="col-12 mr-5">
          <%= form.text_field :role_id, class: "input-filter-index-category", value: Role.find_by_id(@user).name.upcase, disabled:true %>
        </div>
      </div>

      <!--GENDER-->
      <div class="row">
        <div class="col-12 mr-5">Gender</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
        <% if @user.gender == 'male' %>
          <label class="pl-2 pr-3">Male
            <%= form.radio_button :gender, 'male', checked: true, class:"radio-profile" %>
          </label>
          <label class="pl-2 pr-3">Female
            <%= form.radio_button :gender, 'female', class:"radio-profile" %>
          </label>
        <% elsif @user.gender == 'female' %>
          <label class="pl-2 pr-3">Male
            <%= form.radio_button :gender, 'male', class:"radio-profile" %>
          </label>
          <label class="pl-2 pr-3">Female
            <%= form.radio_button :gender, 'female', checked: true, class:"radio-profile" %>
          </label>
        <% else %>
          <label class="pl-2 pr-3">Male
            <%= form.radio_button :gender, 'male', class:"radio-profile" %>
          </label>
          <label class="pl-2 pr-3">Female
            <%= form.radio_button :gender, 'female', class:"radio-profile" %>
          </label>
        <% end %>
        </div>
      </div>

      <!--ADDRESS-->
      <div class="row"><div class="col-12 mr-5">Address</div></div>
      <div class="row">
        <div class="col-12 mr-5">
        <%= form.text_field :address, class: 'input-filter-index-category',value: @user.address %>
        </div>
      </div>

      <!--STATUS-->
      <div class="row"><div class="col-12 mr-5">Status</div></div>
      <div class="row">
        <div class="col-12 mr-5">
          <%= form.text_field :status, class: 'input-filter-index-category', value: @user.status.capitalize, disabled:true %>
        </div>
      </div>
      <!--BUTTON-->
      <div class="row mb-2 mt-4">
        <div class="col-lg-12 text-center">
        <%= form.submit 'Update Profile', class: 'bnt-index-category', html: {style: 'width: 20%; padding: 8px 0;'} %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>