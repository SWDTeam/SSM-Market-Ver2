<div class="wrap-index-category">
  <div class="title-index-category mb-4">
    Profile of
  </div>

  <div class="row" style="padding: 0 70px;">
    <div class="col-12">
      <!--EMAIL-->
      <div class="row">
        <div class="col-12 mr-5">Email</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <input type="text" class="input-filter-index-category" value="Email">
        </div>
      </div>

      <!--NAME-->
      <div class="row">
        <div class="col-12 mr-5">Name</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <input type="text" class="input-filter-index-category" value="Name">
        </div>
      </div>

      <!--PHONE-->
      <div class="row">
        <div class="col-12 mr-5">Phone</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <input type="number" class="input-filter-index-category" value="0909090909">
        </div>
      </div>

      <!--ROLE-->
      <div class="row">
        <div class="col-12 mr-5">Role</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
