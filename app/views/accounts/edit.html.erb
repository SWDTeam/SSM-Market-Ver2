        </div>
      </div>

      <!--ADDRESS-->
      <div class="row">
        <div class="col-12 mr-5">Address</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <input type="text" class="input-filter-index-category" value="Address">
        </div>
      </div>

      <!--STATUS-->
      <div class="row">
        <div class="col-12 mr-5">Status</div>
      </div>
      <div class="row">
        <div class="col-12 mr-5">
          <input type="text" class="input-filter-index-category" value="Status">
        </div>
      </div>

      <!--BUTTON-->
      <div class="row mb-2 mt-4">
        <div class="col-lg-12 text-center">
          <input type="submit" class="bnt-index-category" value="Update Profile" style="width: 20%; padding: 8px 0;">
        </div>
      </div>
