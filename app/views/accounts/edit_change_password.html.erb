<!--css in index-account-->
<%= notice %>
<%= form_with(model: @account, local: true, url:{action: "change_password"}, html:{id:"form--change--password"}) do |form| %>
<div class="wrap-index-category" style="padding: 30px 50px;">
  <div class="title-index-category mb-4">
    Change Password
  </div>

  <!--CURRENT PASS label-->
  <div class="row mt-3">
    <div class="col-3"></div>

    <div class="col-6 label-account">Current Password</div>

    <div class="col-3"></div>
  </div>

  <!--CURRENT PASS input-->
  <div class="row">
    <div class="col-3"></div>

    <div class="col-6">
      <%= form.password_field :old_password, id: :old_password, class: 'input-filter-index-category' %>
      <p class="validate-new-product" id="error--old--pass"></p>
    </div>
    <div class="col-3"></div>
  </div>

  <!--NEW PASS label-->
  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-6 label-account">New Password</div>
    <div class="col-3"></div>
  </div>

  <!--NEW PASS input-->
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <%= form.password_field :new_password, id: :new_password, class: 'input-filter-index-category' %>
      <p class="validate-new-product" id="error--pass--change"></p>
    </div>
    <div class="col-3"></div>
  </div>

  <!--CONFIRM PASS label-->
  <div class="row mt-3">
    <div class="col-3"></div>

    <div class="col-6 label-account">Confirm Password</div>

    <div class="col-3"></div>
  </div>

  <!--CONFIRM PASS input-->
  <div class="row justify-content-center">
    <div class="col-3"></div>

    <div class="col-6">
      <%= form.password_field :confirm_password, id: :confirm_password, class: 'input-filter-index-category' %>
      <p class="validate-new-product" id="error--confirm--pass"></p>
    </div>

    <div class="col-3"></div>
  </div>

  <div class="row mb-2 mt-4">
    <div class="col-lg-12 text-center">
      <%= form.submit 'Change Password', class: 'bnt-index-category col-lg-3', html: {style: "width: 20%; padding: 8px 0;"} %>
      <!-- <input type="submit" class="bnt-index-category" value="Change Password" style="width: 20%; padding: 8px 0;"> -->
    </div>
  </div>
</div>
<% end %>