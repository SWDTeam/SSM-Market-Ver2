<div class="wrap-new-product">
  <%= form_with(model: @product, local: true, url: {action: 'create'}) do |form| %>
    <div class="new-product-title mb-3">
      Add New Product
    </div>
    
    <div class="row mb-4">
      <div class="col-lg-12">
        <div class="row">
          <!--label for NAME-->
          <div class="col-lg-12 label-new-product">
            <%= form.label :name %>
          </div>
        </div>

        <div class="row">
          <!--input for NAME-->
          <div class="col-lg-12">
            <%= form.text_field :name, id: :product_name, class:'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mb-4">
      <!-- categories -->
      <div class="col-lg-4">            
          <div class="row">
            <!--label for CATEGORY-->
            <div class="col-lg-12 label-new-product">
              <%= form.label :category %>
            </div>
          </div>   
          
          <div class="row">
            <!--input for CATEGORY-->
            <div class="col-lg-12">
                <%= form.collection_select(:category_id, @categories, :id, :name, {prompt: t(:select_category)}, id: 'product_product_category') %>
              <%# <input type="text" id="product_product_category"> %>
            </div>
          </div>       
        </div>
      <!-- end categories -->
      <div class="col-lg-4">
        <div class="row">
          <!--label for MANU DATE-->
          <div class="col-lg-12 label-new-product">
            <%= form.label :manu_date %>
          </div>
        </div>

        <div class="row">
          <!--input for MANU DATE-->
          <div class="col-lg-12">
            <%= form.text_field :manu_date, id: :product_manu_date, placeholder: 'mm/dd/yyyy', class: 'form-control datepicker' %>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="row">
          <!--label for EXP DATE-->
          <div class="col-lg-12 label-new-product">
            <%= form.label :expired_date %>
          </div>
        </div>

        <div class="row">
          <!--input for EXP DATE-->
          <div class="col-lg-12">
            <%= form.text_field :expired_date, id: :product_expired_date, placeholder: 'mm/dd/yyyy', class: 'form-control datepicker' %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <!--label for PICTURE-->
        <div class="row">
          <div class="col-lg-12 label-new-product">Picture</div>
        </div>
        <!--input for PICTURE-->
        <div class="row">
          <div class="col-lg-12">
            <div class="row mt-2 justify-content-center" id="product_img_field_container">
              <%= form.fields_for :images do |i| %>
                <div class="M-img-field">
                  <button class='btn btn-dark M-btn-image'><i class="fa fa-image fa-3x"></i></br>Add Image
                  </button>
                  <%= i.file_field :url, multiple: false, name: "images[url][]", class: "M-image-input", onchange:"previewProductImages(event)" %>
                <div class="M-image-output">
                  <div class='btn btn-light M-image-remove' onclick='removeProductImages(event)'><i class="fa fa-trash"></i></div>
                </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="row mb-2">
          <div class="col-lg-8">
              <div class="row">
                <!--label for MANUFACTURE-->
                <div class="col-lg-12 label-new-product">
                  <%= form.label :manufacturer %>
                </div>
              </div>
  
              <div class="row">
                <!--input for MANUFACTURE-->
                <div class="col-lg-12">
                  <%= form.text_field :manufacturer, id: :product_manufacturer %>
                </div>
              </div>
            </div>
          <div class="col-lg-4">
            <div class="row">
              <!--label for STATUS-->            
              <div class="col-lg-12 label-new-product">
                <%= form.label :status %>
              </div>
            </div>
            
            <div class="row">
              <!--input for STATUS-->
              <div class="col-lg-12">
                <%= form.text_field :status, id: :product_status, readonly: true %>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-2">
          <!-- product key -->
          <div class="col-lg-12">
              <div class="row">
                <!--label for PRODUCT KEY-->
                <div class="col-lg-12 label-new-product">
                  <%= form.label :product_key %>
                </div>
              </div>
            
              <div class="row">
                <!--input for PRODUCT KEY-->
                <div class="col-lg-12">
                  <%= form.text_field :product_key, id: :product_product_key, class:'form-control' %>
                </div>
              </div>
            </div>
          <!-- end product key --> 
        </div>
        <div class="row mb-2">
          <div class="col-lg-6">            
            <div class="row">
              <!--label for PRICE-->
              <div class="col-lg-12 label-new-product">
                <%= form.label :price %>
              </div>
            </div>   
            
            <div class="row">
              <!--input for PRICE-->
              <div class="col-lg-12">
                <%= form.text_field :price, id: :product_price %>
              </div>
            </div>       
          </div>

          <div class="col-lg-6">
            <div class="row">
              <!--label for QUANLITY-->            
              <div class="col-lg-12 label-new-product">
                <%= form.label :quantity %>
              </div>
            </div>
            
            <div class="row">
              <!--input for QUANLITY-->
              <div class="col-lg-12">
                <%= form.text_field :quantity, id: :product_quantity %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12 label-new-product">
              <%= form.label :description %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <%= form.text_area :description, id: :product_description, rows: 8 %>
            </div>
          </div>
        </div>
      </div>


    <center>
      <div class="actions mt-5">
        <%= form.submit class:"bnt-creat-product" %>
      </div>
    </center>
  <% end %>
</div>

<script>
$('.datepicker').datepicker({format: 'mm/dd/yyyy'});
</script>


