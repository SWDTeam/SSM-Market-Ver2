<div class="wrap-index-category">
  <div class="title-index-category mb-4">
    View All Categories
  </div>

  <!--Filter form-->
  <form class="filter-index-categories mb-4">
    <div class="row">
      <!--input for FILTER-->
      <div class="col-lg-5">
        <input type="text" placeholder="Name..." class="input-filter-index-category">
      </div>

      <!--FILTER bnt-->
      <div class="col-lg-2">
        <input type="submit" class="bnt-index-category">
      </div>
    </div>
  </form>

  <!--label for table-->
  <div class="row pb-2 wrap-label-index-category">
    <!--STATUS-->
    <div class="col-2 text-center label-index-category">
      Status
    </div>

    <!--IMG-->
    <div class="col-2 text-center label-index-category">
      Image
    </div>

    <!--NAME-->
    <div class="col-3 label-index-category">
      Name
    </div>

    <!--Total Of Products-->
    <div class="col-2 text-center label-index-category">
      Total
    </div>

    <!--Edit-->
    <div class="col-1 text-center label-index-category">
      Edit
    </div>

    <!--Delete-->
    <div class="col-1 text-center label-index-category">
      Delete
    </div>
  </div>

  <!--content of table-->
  <% @categories.each do |category| %>
    <div class="row py-3 wrap-content-index-category">
      <!--STATUS-->
      <div class="col-2 text-center">
        <%= category.status %>
      </div>

      <!--IMG-->
      <div class="col-2">
        <img src="<%= category.images.first.url %>" alt="" class="img-index-categories">
      </div>

      <!--NAME-->
      <div class="col-3">
        <%= category.name %>
      </div>

      <!--Total Of Products-->
      <div class="col-2 text-center">
        50
      </div>

      <!--Edit-->
      <div class="col-1">
        <center>
          <i class="fa fa-edit edit-bnt-index-category"></i></center>
        </center>
      </div>

      <!--Delete-->
      <div class="col-1">
        <center>
          <i class="fa fa-trash del-bnt-index-category"></i>
        </center>
      </div>
    </div>
  <% end %>

</div>
