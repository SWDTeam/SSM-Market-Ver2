<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccountActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3d96c1"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#ffffff"
        app:title="Account"
        >

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafaf8"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgPicAccount"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/femaleicon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Welcome "
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtUsernameAccount"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewAccountActi"
        android:layout_width="match_parent"
        android:layout_height="399dp"></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView
            android:layout_marginTop="3dp"
            android:id="@+id/menuAccountActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundMenuColor="#ffffff"
            app:backgroundNotifications="#4c30bc"
            app:icon_height="30dp"
            app:icon_width="30dp"
            app:item_backgroundColor="#ffffff"
            app:item_colorSelected="#ff4511"
            app:item_textColor="#000000"
            app:item_textSize="5sp"
            >
        </com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView>

        <TextView
            android:id="@+id/txtCountAccountActi"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="115dp"
            android:background="@drawable/round_outline"
            android:gravity="center"
            android:text="123"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>